{
  "name": "scheveningen",
  "version": "1.1.0",
  "description": "Package for quick start of a new project",
  "scripts": {
    "lint": "eslint '**/*.js'",
    "types": "tsc --noEmit",
    "prettier": "prettier '**/*.js' --ignore-path ./.prettierignore --write",
    "develop": "webpack-dev-server --config configs/webpack/dev/webpack.config.js --open",
    "build": "cross-env NODE_ENV=production webpack --config configs/webpack/prod/webpack.config.js",
    "release": "standard-version"
  },
  "author": "Alexandrshy",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts *.js": [
      "npm run lint"
    ]
  },
  "keywords": [
    "startkit",
    "es6",
    "javascript",
    "sass",
    "webpack",
    "eslint"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "babel-loader": "^8.1.0",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.0.0",
    "html-loader": "^1.2.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^2.0.5",
    "node-sass": "^4.14.1",
    "sass-loader": "^9.0.3",
    "standard-version": "^8.0.2",
    "ts-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "core-js": "^3.6.5"
  }
}
